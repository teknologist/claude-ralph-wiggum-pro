{
  "name": "ralph-dashboard",
  "version": "1.0.2",
  "description": "Web dashboard for Ralph Wiggum loops - view active and archived sessions",
  "type": "module",
  "bin": {
    "ralph-dashboard": "./server/index.ts"
  },
  "scripts": {
    "dev": "concurrently \"bun run dev:vite\" \"bun run dev:server\"",
    "dev:server": "bun --watch server/index.ts --port 3847",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "start": "bun run server/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src server --ext .ts,.tsx",
    "dev:vite": "vite"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@tanstack/react-query": "^5.60.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.1.0",
    "@types/bun": "^1.1.14",
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "eslint": "^9.16.0",
    "jsdom": "^25.0.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0",
    "vitest": "^2.1.0"
  },
  "files": [
    "dist",
    "server",
    "package.json",
    "README.md"
  ],
  "license": "MIT"
}
